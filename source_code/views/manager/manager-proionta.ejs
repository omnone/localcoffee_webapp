<% include ../partials/header-manager %>


  <div class="col-md-9 ">
    <div class="panel panel-default">
      <div class="panel-heading">Προιόντα </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="ui celled padded table">
            <thead>
              <tr>
                <th colspan="5">
                </th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><strong>Όνομα</strong></td>
                <td><strong>Τιμή</strong></td>
                <td><strong>Ποσότητα</strong></td>

              </tr>
              <% var id_item = 0; %>
                <% items.forEach(function(item){ %>
                     <% if(item.eidos === "geuma"){ %>
                  <tr id="<%- id_item %>" class="animated fadeIn">
                    <td class="name">
                      <%- item.name %>
                    </td>
                    <td>
                      <%- item.price %> &euro;
                    </td>
                    <td>
                      <input class="input-values" id="quantity" type="text" min="1" value="  <%- item.apoth_posot %>">
                    </td>
                    <td>
                      <button class="btn btn-success refresh-item pull-right"><i class="fa fa-refresh" aria-hidden="true"></i></button>
                    </td>
                    <td>
                      <button class="btn btn-danger disable-item"><i class="fa fa-window-close" aria-hidden="true"></i></button>
                    </td>
                  </tr>

                  <% id_item = id_item +1 ; %>
                    <%  }; %>
                    <%  }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  </div>


  <% include ../partials/footer %>
