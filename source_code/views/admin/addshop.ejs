<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h1 class="post-form-title">Προσθήκη Καταστήματος</h1>

      <div class="post-form">

        <form action="/addshop" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="name" placeholder="Όνομα" required>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="lat" placeholder="Latitude" required>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="lng" placeholder="Longitude" required>
          </div>
          <div class="form-group">
            <input class="form-control" type="text" name="phone" placeholder="Τηλέφωνο" required>
          </div>
          <hr>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Καταχώρηση Καταστήματος</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
