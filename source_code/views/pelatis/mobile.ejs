<% include ../partials/header %>

  <div id="mySidenav" class="sidenav">

    <div class="panel panel-default panel-side" id="order-info">
      <div class="panel-header">
         <a href="javascript:void(0)" class="closebtn" onclick="closeNav()"><i class="fa fa-times pull-right"  aria-hidden="true"></i></a>
      </div>
      <div class="panel-body">
        <h3 style="text-transform: uppercase;"><strong>Η Παραγγελία σου</strong></h3>
        <hr>
        <h4><strong><%- pel[0].pel_name %> <%- pel[0].pel_sur%></strong></h5>
        <h5><i class="fa fa-map-marker" aria-hidden="true"></i> <%= addr %></h5>
        <h5>Τηλ. <%- pel[0].pel_phone %></h5>
        <hr>

        <ol id="order">

        </ol>
        <hr>

        <div class="input-group">
          <span class="pull-left" id ="total-mob">Σύνολο: <span id="order-total">0</span> &euro;</span>
          <% if (addr === "-"){ %>
            <button class=" btn btn-success pull-right" id="" disabled><i class="fa fa-shopping-cart" ></i> Ολοκλήρωση </button>
            <% }else { %>
              <button class=" btn btn-success pull-right" id="finish-order"><i class="fa fa-shopping-cart" ></i> Ολοκλήρωση </button>
              <% } %>
                <%# <input type="text" class="form-control" placeholder="Ποσό Παραγγελείας" id="order-total" readonly="readonly" aria-describedby="basic-addon1"> %>
        </div>
      </div>
    </div>

  </div>

  <div class="container" >
    <div class="row">
      <div class=" col-xs-12 col-md-8 col-lg-8">
        <div class="panel panel-default" id="menu-title">
          <div class="panel-header">
            <h1 class="animated slideInUp">Κατάλογος</h1>
          </div>
        </div>
        <div class="table-responsive">
          <table  class="table table-bordered" id="mob-table">
            <thead>
              <tr>
                <th colspan="3">
                  Καφές
                </th>
              </tr>
            </thead>
            <tbody>
              <% var id_item = 0; %>
                <% items.forEach(function(item){ %>

                  <% if(item.eidos === "kafes"){ %>

                    <tr id="<%- id_item %>" class="animated fadeIn">
                      <td   class="name">
                      <%- item.name %>
                      </td>
                      <td class="col-xs-3">
                      <button class="quant-btn minus"><i class="fa fa-minus" aria-hidden="true"></i></button> <input class="input-values" id="quantity" type="number" min="1" max="<%- item.posotita %>" value="1"><button class="quant-btn plus"><i class="fa fa-plus" aria-hidden="true"></button></i>
                      <span id="no-quant"><i class="fa fa-exclamation-triangle" id ="alert-quant" aria-hidden="true"></i></span>
                        </td>
                      <td class="col-xs-3">
                      <button class="btn btn-primary add_cart"><i class="fa fa-shopping-cart" aria-hidden="true"><span id="price"> <%- parseFloat(Math.round(item.price * 100) / 100).toFixed(2) %></span>&euro;</i></button>
                      </td>
                    </tr>
                    <% id_item = id_item +1 ; %>
                      <% } }); %>
            </tbody>
            <thead>
              <tr>
                <th colspan="3">
                  Μικρογεύματα
                </th>
              </tr>
            </thead>
            <tbody>

              <% items.forEach(function(item){ %>
                <% if(item.eidos === "geuma"){ %>
                  <% if(item.posotita <= 0) { %>
                    <tr id="<%- id_item %>" class="animated fadeIn disabled" disabled>
                      <% }else{ %>
                        <tr id="<%- id_item %>" class="animated fadeIn">
                          <% } %>
                            <td class="name">
                              <%- item.name %>
                            </td>
                            <td>
                            <button class="quant-btn minus"><i class="fa fa-minus" aria-hidden="true"></i></button> <input class="input-values" id="quantity" type="number" min="1" max="<%- item.posotita %>" value="1"><button class="quant-btn plus"><i class="fa fa-plus" aria-hidden="true"></button></i>
                            <span id="no-quant"><i class="fa fa-exclamation-triangle" id ="alert-quant" aria-hidden="true"></i></span>                            </td>
                            <td>
                            <button class="btn btn-primary add_cart"><i class="fa fa-shopping-cart" aria-hidden="true"><span id="price"> <%- parseFloat(Math.round(item.price * 100) / 100).toFixed(2) %></span>&euro;</i></button>
                            </td>
                        </tr>
                        <% id_item = id_item +1 ; %>
                          <% } }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <button style="font-size:30px;cursor:pointer" onclick="openNav()" id="myBtn"><i class="fa fa-shopping-basket" ></i><span id="mob-quant">0</span></button>

  <script type="text/javascript">
    <!--
    if (screen.width >= 700) {
      document.location = "index";
    }
    //-->
  </script>

  <% include ../partials/footer %>
