<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <h1 class="post-form-title">Εγγραφή</h1>

      <div class="post-form">

        <form action="/register" method="POST">
          <div class="form-group">
            <label>Όνομα:</label>
            <input class="form-control" type="text" name="name" placeholder="Όνομα" required>
          </div>
          <div class="form-group">
            <label>Επίθετο:</label>
            <input class="form-control" type="text" name="surname" placeholder="Επώνυμο" required>
          </div>
          <div class="form-group">
            <label>Email:</label>
            <input class="form-control" type="email" name="username" placeholder="Email" required>
          </div>
          <div class="form-group">
            <label>Κωδικός:</label>
            <input class="form-control" type="password" name="password" placeholder="Κωδικός" required>
          </div>
          <div class="form-group">
            <label>Τηλέφωνο:</label>
            <input class="form-control" type="text" name="phone" placeholder="Τηλέφωνο" required>
          </div>
          <hr>
          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Εγγραφή!</button>
          </div>

        </form>
        <br>
        <p>Έχετε ήδη λογαριασμό? <a href="/login">Είσοδος</a></p>
        <a href="/">Πήγαινε Πίσω</a>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
